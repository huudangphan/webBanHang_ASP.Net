@model IEnumerable<ShopBanHang.Models.SanPham>

@{
    ViewBag.Title = "AppleLaptop";
    Layout = "~/Views/Shared/_LayoutTrangChuNewNoAd.cshtml";
}

<h2>AppleLaptop</h2>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-3">
            <a href="@Url.Action("xemChiTiet","SanPham",new { @masp=item.maSP})" style="color:white"><img src="~/Assit/img/@Html.DisplayFor(modelItem=>item.anh)" alt="Alternate Text" style="width:230px;height:250px;margin:10px;" /></a>

            <div style="text-align:center;margin-bottom:10px;">
                <p>@Html.DisplayFor(modelItem => item.tenSP)</p>
                <p>@Html.DisplayFor(modelItem => item.giaSP)</p>

            </div>

        </div>


    }
</div>

<style>
    h2 {
        margin: 15px;
        color: goldenrod;
    }

    .col-md-3 {
        border: 0.5px solid #d3cdcd;
        align-items: center;
    }

        .col-md-3 p {
            font-weight: bold;
            color: red;
        }
</style>