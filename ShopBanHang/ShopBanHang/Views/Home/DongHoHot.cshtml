@model IEnumerable<ShopBanHang.Models.SanPham>

<div class="container">
    <h1>Đồng hồ nổi bật nhất</h1>
    <div class="row" style="margin-top:20px">
        @foreach (var item in Model)
        {

            <div class="col-md-3">
                <div><a href="@Url.Action("xemChiTiet","SanPham",new { @masp=item.maSP})" style="color:white"><img src="~/Assit/img/@Html.DisplayFor(modelItem=>item.anh)" alt="Alternate Text" style="width:230px;height:250px;margin-top:15px;" /></a></div>

                <div style="text-align:center;margin-bottom:10px">
                    <p style="margin-top:15px;">@Html.DisplayFor(modelItem => item.tenSP)</p>
                    <p>@String.Format("{0:0,0}", Html.DisplayFor(modelItem => item.giaSP)) USD</p>

                </div>

            </div>}
    </div>
</div>
