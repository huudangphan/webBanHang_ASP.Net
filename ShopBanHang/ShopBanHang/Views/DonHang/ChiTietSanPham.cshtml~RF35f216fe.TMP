@model ShopBanHang.Models.SanPham

<div>
   
    <dl class="dl-horizontal">
        

        <dt>
            @Html.DisplayNameFor(model => model.tenSP)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenSP)
        </dd>

        <dt>
            <div style="width: 30%;height: 30%; float: left;margin-top:10px;">
                <img src="~/Assit/img/@Model.anh" alt="Alternate Text" style="width:100%;height:100%;" />
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.anh)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.giaSP)
        </dt>

        <dd>
            <p style="font-size:20px;color:palevioletred;">Giá:@String.Format("{0:0,0}", Model.giaSP) VNĐ </p>
        </dd>

        

    </dl>
</div>
