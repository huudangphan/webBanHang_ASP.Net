@model ShopBanHang.Models.SanPham

@{
    ViewBag.Title = "FileUpload";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@ViewBag.ThongBao
@using (Html.BeginForm("FileUpload", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label class="control-label col-md-2" for="maHang"> Hãng </label>

            <div class="col-md-10">


                @Html.DropDownList("mahang")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="maLoai"> Loại hàng </label>

            <div class="col-md-10">


                @Html.DropDownList("maloai")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="tenSP"> Tên sản phẩm </label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.tenSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="anh"> Ảnh </label>

            <div class="col-md-10">
                <input type="file" name="fileUp" value="" />

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="giaSP"> Giá nhập </label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.giaSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.giaSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="MoTa"> Mô tả </label>

            <div class="col-md-10">

                <textarea name="MoTa">Mô tả thông tin </textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}


